{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    // "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@domain/*": ["domain/*"],
      "@api/*": ["api/*"]
    },
    "noImplicitReturns": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src/**/*.ts", "tests/integration/tasks.spec.ts"],
  "exclude": ["node_modules"]
}
